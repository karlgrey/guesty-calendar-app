# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=localhost

# Guesty OAuth Configuration
GUESTY_CLIENT_ID=your_client_id_here
GUESTY_CLIENT_SECRET=your_client_secret_here
GUESTY_API_URL=https://open-api.guesty.com/v1
GUESTY_OAUTH_URL=https://open-api.guesty.com/oauth2/token
GUESTY_PROPERTY_ID=your_property_id_here

# Property Configuration
PROPERTY_CURRENCY=EUR
PROPERTY_TIMEZONE=Europe/Berlin

# Booking Configuration
BOOKING_RECIPIENT_EMAIL=booking@farmhouse-prasser.de
BOOKING_SENDER_NAME=Farmhouse Prasser

# Cache Configuration (in minutes)
# CACHE_AVAILABILITY_TTL controls ETL scheduler interval
# Recommended: 60-120 minutes to avoid Guesty rate limits (15 req/sec, 120 req/min, 5000 req/hour)
CACHE_LISTING_TTL=1440
CACHE_AVAILABILITY_TTL=60
CACHE_QUOTE_TTL=60

# Database Configuration
DATABASE_PATH=./data/calendar.db

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Authentication Configuration
# BASE_URL is the full public URL of your application (used for OAuth callbacks)
BASE_URL=http://localhost:3000
# SESSION_SECRET should be a long, random string (at least 32 characters)
# Generate with: openssl rand -base64 32
SESSION_SECRET=your_session_secret_here_at_least_32_characters_long
# Google OAuth credentials (get from https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
# Comma-separated list of email addresses allowed to access admin panel
ADMIN_ALLOWED_EMAILS=micha@remoterepublic.com