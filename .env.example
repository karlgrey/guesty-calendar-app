# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=localhost

# Guesty OAuth Configuration
GUESTY_CLIENT_ID=your_client_id_here
GUESTY_CLIENT_SECRET=your_client_secret_here
GUESTY_API_URL=https://open-api.guesty.com/v1
GUESTY_OAUTH_URL=https://open-api.guesty.com/oauth2/token
GUESTY_PROPERTY_ID=your_property_id_here

# Property Configuration
PROPERTY_CURRENCY=EUR
PROPERTY_TIMEZONE=Europe/Berlin

# Booking Configuration
BOOKING_RECIPIENT_EMAIL=booking@farmhouse-prasser.de
BOOKING_SENDER_NAME=Farmhouse Prasser

# Cache Configuration (in hours)
# CACHE_AVAILABILITY_TTL also controls ETL scheduler interval (hourly refresh recommended)
CACHE_LISTING_TTL=24
CACHE_AVAILABILITY_TTL=1
CACHE_QUOTE_TTL=1

# Database Configuration
DATABASE_PATH=./data/calendar.db

# Logging
LOG_LEVEL=info
LOG_PRETTY=true