# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=localhost

# Guesty OAuth Configuration
GUESTY_CLIENT_ID=your_client_id_here
GUESTY_CLIENT_SECRET=your_client_secret_here
GUESTY_API_URL=https://open-api.guesty.com/v1
GUESTY_OAUTH_URL=https://open-api.guesty.com/oauth2/token
GUESTY_PROPERTY_ID=your_property_id_here

# Property Configuration
PROPERTY_CURRENCY=EUR
PROPERTY_TIMEZONE=Europe/Berlin

# Booking Configuration
BOOKING_RECIPIENT_EMAIL=booking@farmhouse-prasser.de
BOOKING_SENDER_NAME=Farmhouse Prasser

# Cache Configuration (in minutes)
# CACHE_AVAILABILITY_TTL controls ETL scheduler interval
# Recommended: 60-120 minutes to avoid Guesty rate limits (15 req/sec, 120 req/min, 5000 req/hour)
CACHE_LISTING_TTL=1440
CACHE_AVAILABILITY_TTL=60
CACHE_QUOTE_TTL=60

# Database Configuration
DATABASE_PATH=./data/calendar.db

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Authentication Configuration
# BASE_URL is the full public URL of your application (used for OAuth callbacks)
BASE_URL=http://localhost:3000
# SESSION_SECRET should be a long, random string (at least 32 characters)
# Generate with: openssl rand -base64 32
SESSION_SECRET=your_session_secret_here_at_least_32_characters_long
# Google OAuth credentials (get from https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
# Comma-separated list of email addresses allowed to access admin panel
ADMIN_ALLOWED_EMAILS=micha@remoterepublic.com

# Email Configuration (for weekly reports)
# Option 1: Resend (Recommended - https://resend.com)
# Get your API key from: https://resend.com/api-keys
# Free tier: 3,000 emails/month, 100 emails/day
RESEND_API_KEY=re_123456789
EMAIL_FROM_ADDRESS=noreply@your-domain.com
EMAIL_FROM_NAME=Guesty Calendar

# Option 2: SMTP (Fallback - used only if RESEND_API_KEY is not set)
# Not recommended with Gmail - use Resend, SendGrid, or Mailgun instead
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=0
# SMTP_USER=your_smtp_username
# SMTP_PASSWORD=your_smtp_password

# Weekly Report Configuration
# Enable/disable weekly summary emails
WEEKLY_REPORT_ENABLED=true
# Comma-separated list of email addresses to receive weekly reports
WEEKLY_REPORT_RECIPIENTS=admin@example.com,manager@example.com
# Day of week to send report (0=Sunday, 1=Monday, 2=Tuesday, etc.)
WEEKLY_REPORT_DAY=1
# Hour of day to send report (0-23, in 24-hour format)
WEEKLY_REPORT_HOUR=9